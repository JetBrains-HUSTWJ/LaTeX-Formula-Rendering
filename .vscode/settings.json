{
    "editor.fontFamily": "'JetBrains Mono', Consolas, 'Courier New', monospace",
    "editor.fontSize": 14,
    "editor.lineHeight": 20,
    "editor.letterSpacing": 0,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.renderWhitespace": "all",
    "editor.renderControlCharacters": true,
    "editor.renderLineHighlight": "all",
    "editor.cursorBlinking": "smooth",
    "editor.cursorStyle": "line",
    "editor.cursorWidth": 2,
    "editor.cursorSmoothCaretAnimation": true,
    "editor.smoothScrolling": true,
    "editor.scrollBeyondLastLine": false,   
    "editor.scrollbar.vertical": "visible",
    "editor.scrollbar.horizontal": "visible",
    "editor.scrollbar.verticalSliderSize": 8,
    "editor.scrollbar.horizontalSliderSize": 8,
    "editor.scrollbar.useShadows": false,
    "editor.scrollBeyondLastColumn": 1,
    "editor.minimap.enabled": true,
    "editor.minimap.renderCharacters": false,
    "editor.minimap.showSlider": "always",
    "editor.minimap.smoothScrolling": true,
    "editor.minimap.maxColumn": 200,
    "editor.minimap.colorDecorators": true,
    "editor.minimap.colorMap": true,
    "editor.minimap.colorMapStart": "#ff0000",
    "editor.minimap.colorMapEnd": "#00ff00",
    "editor.minimap.colorMapAlpha": 0.5,
    "editor.minimap.colorMapFormat": "rgb",
    "editor.minimap.colorMapScale": "linear",
    "editor.minimap.colorMapMin": 0,
    "editor.minimap.colorMapMax": 100,
    "editor.minimap.colorMapInvert": false        
}